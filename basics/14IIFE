//Immediately Invoked Function Expressions(IIFE)

(function job(){
    console.log(`db connected`)
})();// terminate krne k liye yha semicolon jarurui hai,agle function ko chlane k liye

//global scope k pollution se problem hoti hai
//usse bachne k liye IIFE ka use krte hai

((name)=>{
    console.log(`Another IIFE ${name} `)
})("tanyaaa")

